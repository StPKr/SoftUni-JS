<main class="search">
    <!-- Search Page (Only for logged-in users) -->
    <section id="search">
        <h2>Search by Name</h2>

        <form class="search-wrapper cf" method="post">
            <input id="#search-input" type="text" name="search" placeholder="Search here..." required {{#if
                data.search}}value="{{data.search}}" {{/if}} />
            <button type="submit">Search</button>
        </form>
        {{#if data.search}}
        <div id="search-container">
            <ul class="card-wrapper">
                <!-- Display a li with information about every post (if any)-->
                {{#each stones}}
                {{> stone-catalog}}

                {{/each}}
            </ul>
            {{else}}
            <!-- Display an h2 if there are no posts -->
            <div id="no-post">
                <h2>There are no results found.</h2>
            </div>
            {{/if}}
        </div>
    </section>
</main>